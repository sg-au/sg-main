<%-include("../partials/post-head")%>

<body>
  <%-include("../partials/preloader")%>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    
    <%-include("../partials/sidebar")%>

    <!--  Main wrapper -->
    <div class="body-wrapper">
      <%-include("../partials/header")%>
      <div class="container-fluid">
        <div class="row g-4">
                <div style="margin-top: 40px;" class="col-12">
                    <h2>Your Organisation(s)</h2>
                    <p>
                        Browse through your listed organisations and click on the edit button to edit/update your listing.
                    </p>                    
                </div>
            <% linkedListings.forEach(org => { %>
                <div
                  class="col-12 col-md-6 col-lg-6 organisation-item"
                  data-name="<%= org.name %>"
                  data-type="<%= org.type %>"
                >
              
                  <div class="card h-100">
                    <% if (true) { %>
                      <img
                        src="<%= organisation.profile_url 
                                ? organisation.profile_url.replace(/=s\d+/g, '=s256') 
                                : '' %>"
                        width="100"
                        height="100"
                        style="margin:auto;margin-top:15px"
                        class="rounded-circle"
                      />

                    <% } else { %>
                    <div
                      class="card-img-top bg-light d-flex align-items-center justify-content-center"
                      style="height: 200px"
                    >
                      <i class="fa fa-building fa-4x text-muted"></i>
                    </div>
                    <% } %>
                    <div style="text-align:center" class="card-body">
                      <h3 style="margin:auto" class="card-title"><%= org.name %></h3><br/>
                      <p class="card-text">
                        <span class="badge bg-primary text-capitalize"
                          ><%= org.type %></span
                        >
                      </p>
                      <% if (org.short_description) { %>
                        <p class="card-text text-muted" style="text-align: justify;">
                            <%- org.short_description.length > 300 ? 
                                org.short_description.substring(0, 300) + '...' : 
                                org.short_description 
                            %>
                        </p>
                      <% } %>
                      <div style="position: absolute; bottom: 20px; left: 50%; transform: translateX(-50%);">
                        <a href="/organisation/edit-catalogue-listing/<%= org.id %>" target="_blank" class="btn btn-primary">
                          Edit Listing
                        </a>
                      </div>                                            
                    </div>
                  </div>
                </div>
            <% }) %>        
        </div>                                      
      </div>      
    </div>
  </div>
  </div>
  <script src="/organisation/assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="/organisation/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/organisation/assets/js/sidebarmenu.js"></script>
  <script src="/organisation/assets/js/app.min.js"></script>
  <script src="/organisation/assets/libs/apexcharts/dist/apexcharts.min.js"></script>
  <script src="/organisation/assets/libs/simplebar/dist/simplebar.js"></script>
  <script src="/organisation/assets/js/dashboard.js"></script>
  <script src="/organisation/assets/js/darkmode.js"></script>
  <script src="/organisation/assets/js/theme.js"></script>
  <%-include("../partials/preloader-js")%>
</body>
</html>