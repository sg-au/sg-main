    rel="stylesheet">
  <%-include("../partials/preloader-css")%>

  <style>
    .responsive-h2 {
      font-size: 3.5rem;
    }

    /* Responsive Paragraph */
    .responsive-p {
      font-size: 1.2rem;
    }

    /* Media Queries for smaller screens */
    @media (max-width: 1200px) {
      .responsive-h2 {
        font-size: 3rem;
      }
      .responsive-p {
        font-size: 1rem;
      }
    }

    @media (max-width: 768px) {
      .responsive-h2 {
        font-size: 2.5rem;
      }
      .responsive-p {
        font-size: 0.9rem;
      }
    }

    @media (max-width: 576px) {
      .responsive-h2 {
        font-size: 2rem;
      }
      .responsive-p {
        font-size: 0.8rem;
      }
    }
  </style>
