    <script>
        function toggleSpeedTest() {
            const wifiStatus = document.getElementById('wifiStatus').value;
            const speedTestSection = document.getElementById('speedTestSection');
            const downloadSpeed = document.getElementById('downloadSpeed');
            const uploadSpeed = document.getElementById('uploadSpeed');
            
            if (wifiStatus === 'onWifi') {
                speedTestSection.style.display = 'block';
                downloadSpeed.required = true;
                uploadSpeed.required = true;
            } else {
                speedTestSection.style.display = 'none';
                downloadSpeed.required = false;
                uploadSpeed.required = false;
            }
        }
    </script>

