        function openModal() {
            const modal = new bootstrap.Modal(document.getElementById('infoModal'));
            modal.show();
        }
    </script>
    <script>
        document.getElementById('wifiTicketForm').addEventListener('submit', async (e) => {
            e.preventDefault();        
            const submitBtn = document.getElementById('submitWifiTicket');
            submitBtn.disabled = true;
            submitBtn.innerHTML = `<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Submitting...`;

            const userDateTime = new Date().toLocaleString('en-US', { 
                timeZone: 'Asia/Kolkata',  // Use Indian timezone
                dateStyle: 'full',
                timeStyle: 'medium'
            });
            
            try {
                const response = await fetch('/platform/wifi-ticket', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        phone: document.getElementById('phoneNumber').value,
                        wifiStatus: document.getElementById('wifiStatus').value,
                        downloadSpeed: document.getElementById('downloadSpeed').value,
                        // uploadSpeed: document.getElementById('uploadSpeed').value,
                        complaintType: document.getElementById('complaintType').value,
                        location: document.getElementById('location').value,
                        specificLocation: document.getElementById('specific-location').value,
                        message: document.getElementById('message').value,
                        submissionTimestamp: userDateTime
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert(data.message);
                    window.location.reload();
                } else {
                    alert(data.message);
                    // Re-enable submit button if there's an error
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = 'Submit Ticket';
                }
            } catch (error) {
                alert('Error submitting WiFi ticket. Please try again.');
                // Re-enable submit button if there's an error
                submitBtn.disabled = false;
                submitBtn.innerHTML = 'Submit Ticket';
            }
        });
    </script>

