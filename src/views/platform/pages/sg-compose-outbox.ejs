                    <form>
                        <div class="row">
                          <div class="col-lg-6">
                            <label for="route" class="form-label"> <span style="color:rgb(177, 58, 58)">Outbox Status</span></label>
                            <select class="form-select" id="route" name="route">
                              <option>All Mails</option>
                              <option selected value="pending">Pending</option>
                              <option value="approved">Approved</option>
                              <option value="rejected">Rejected</option>
                            </select>
                          </div>
                          <div class="col-lg-6">
                            
                          </div>
                        </div>
                      </form>
