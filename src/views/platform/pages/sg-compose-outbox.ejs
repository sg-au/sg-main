                    <table id="borrowmails" class="table table-striped scroll" style="width:100%">
                      <thead>
                          <tr>
                            <th>ID</th>
                            <th>Date of Request</th>
                            <th>To</th>
                            <th>Status</th>
                            <th>Category</th>
                            <th>Mail Request</th>
                          </tr>
                      </thead>
                      <tbody>
                        <%for(i=0;i<mails.length;i++){%>
                            <tr>
                              <td>
                                <%=mails[i].id%>
                              </td>
                              <td>
                                <%-new Date(mails[i].createdAt).toLocaleDateString('en', { month: 'short' })-%> <%-new Date(mails[i].createdAt).getDate()-%>, <%-new Date(mails[i].createdAt).getFullYear()-%>  
                              </td>
                              <td>
                                <%=mails[i].recipients.substring(0,20)%>...
                              </td>
                              <td>
                                <%if(mails[i].status=="pending"){%>
                                <span class="bg-warning text-white"> <%=mails[i].status%></span>
                                <%}else if(mails[i].status=="approved"){%>
                                    <span class="bg-success text-white"> <%=mails[i].status%></span>
                                <%}else{%>
                                    <span class="bg-danger text-white"> <%=mails[i].status%></span>
                                <%}%>
                              </td>
                              <td>
                                <%=mails[i].alias%>
                              </td>
                              <td>
                                <%-mails[i].subject.substring(0,40)-%>
                              </td>
                            </tr>
                        <%}%>                      
