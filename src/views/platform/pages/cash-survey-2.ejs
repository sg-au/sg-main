                let hasNonNeverAnswer = false;
                experienceQuestions.forEach(q => {
                    if (q.value !== 'Never' && q.value !== '') {
                        hasNonNeverAnswer = true;
                    }
                });

                if (hasNonNeverAnswer) {
                    experiencedSHYes.checked = true;
                } else {
                    experiencedSHNo.checked = true;
                }
            }

            experienceQuestions.forEach(select => {
                select.addEventListener('change', updateExperienceRadio);
