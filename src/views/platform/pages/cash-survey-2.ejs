            // --- Navigation Logic ---
            function showSection(index) {
                const currentSections = document.querySelectorAll('.form-section');
                currentSections.forEach((section, i) => {
                    section.style.display = (i === index) ? 'block' : 'none';
                    section.classList.toggle('active', i === index);
                });

                const lastIndex = currentSections.length - 1;
                const sectionControls = currentSections[lastIndex].querySelector('.d-flex.justify-content-between');
                let submitBtn = document.getElementById('submitSurveyBtn');
                
                // Manage the dynamic submit button visibility on the FINAL PAGE (section6)
                if (index === lastIndex) {
                    const lastSectionNextButton = currentSections[lastIndex].querySelector('.next-section');
                    if(lastSectionNextButton) {
                        lastSectionNextButton.style.display = 'none';
                    }

                    if (!submitBtn) {
                        submitBtn = document.createElement('button');
                        submitBtn.id = 'submitSurveyBtn';
                        submitBtn.type = 'submit';
                        submitBtn.classList.add('btn', 'btn-primary');
                        submitBtn.textContent = 'Submit Survey';
